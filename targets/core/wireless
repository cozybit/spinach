config wifi-iface mesh0
        option device   radio0            
        option mode     mesh              
        option mesh_id    plantmesh_core           
        option encryption none            
                                          
config wifi-device  radio0
	option type     mac80211
	option channel  11
	option macaddr	02:00:00:00:00:00
	option hwmode	11ng
	option htmode	HT20
	list ht_capab	GF
	list ht_capab	SHORT-GI-40
	list ht_capab	DSSS_CCK-40
	# REMOVE THIS LINE TO ENABLE WIFI:
	# option disabled 1
                                         
config wifi-device  radio1
	option type     mac80211
	option channel  11
	option macaddr	02:00:00:00:01:00
	option hwmode	11ng
	option htmode	HT20
	list ht_capab	GF
	list ht_capab	SHORT-GI-40
	list ht_capab	DSSS_CCK-40
	# REMOVE THIS LINE TO ENABLE WIFI:
	# option disabled 1

config wifi-iface
        option device   radio1
        option network  lan
        option mode     ap
        option ssid     PlantMeshAP
        option encryption none
