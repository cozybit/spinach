config wifi-device  radio0
        option type     mac80211
        option channel  11
        option phy      phy0
        option hwmode   11g
	option disable 	1

config wifi-iface wlan0
        option device   radio0
        option network  lan
        option mode     mesh
        option mesh_id  foo

config wifi-device  radio1
        option type     mac80211
        option channel  11
        option phy      phy1
        option hwmode   11g
        option htmode   HT20
        list ht_capab   SHORT-GI-40
        list ht_capab   DSSS_CCK-40

config wifi-iface wlan1
        option device   radio1
        option network  lan
        option mode     mesh
        option mesh_id  plant-mesh
	option mesh_pass hello
