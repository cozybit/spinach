config interface loopback
	option ifname	lo
	option proto	static
	option ipaddr	127.0.0.1
	option netmask	255.0.0.0

config interface lan
	option ifname	eth0
	option proto	static
	option ipaddr	192.168.1.120
	option netmask	255.255.255.0

config interface mesh
        option proto  static
        option ipaddr 10.10.10.1
        option netmask 255.255.255.0
